{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es6"
    ],
    "target": "es2019",
    "sourceMap": false,
    "declaration": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}